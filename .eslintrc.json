{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "radix": [
            "error",
            "as-needed"
        ],
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "import/prefer-default-export": "off"
    }
}